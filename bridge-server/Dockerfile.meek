FROM node:20-alpine

WORKDIR /app
COPY package*.json ./
RUN npm install --production
COPY server-meek.js cover-site.js health-auth.js logger.js traffic-monitor.js ./

EXPOSE 8443

ENV MANAGEMENT_PORT=9093
ENV QUIET_MODE=1

HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://127.0.0.1:9093/health || exit 1

CMD ["node", "server-meek.js"]
